{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext"],
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": ["src"]
}
